body
  height: 100%;
  padding: 0;
  margin: 0;

.navbar
  display: none
  color: black

#logo
  text-align: center

.container
  box-shadow:0 .1em 1em #e5e5e5 inset;
  height: 100%
  display: flex

.maplick-bar
  position: relative
  flex: 1 75%

.maplick-mainform
  position: absolute;
  top: 50%
  left: 50%
  height: 30%
  width: 50%;
  margin: -15% 0 0 -25%;
  text-align: center

#map_canvas
  display: block
  flex: 1 100%



@media (min-width: 379px) and (max-width: 1070px)
  .navbar
    box-shadow:0 .2em 2em #e5e5e5 inset;
    display: block
    background-color: white

  #logo
    float: left
    text-align: center
    height: 75%


  .upload-btn-navbar
    color: black

  .maplick-bar
    position: relative
    flex: 1 0%

  .maplick-mainform
    display: none


.file_upload
  position relative
  overflow hidden
  font-size 1em
  height 30px
  width 200px
  line-height 2em
  & > button
    float right
    width 8em
    height 100%
  & > div
    padding-left 1em
  input[type=file]
    position absolute
    left 0
    top 0
    width 100%
    height 100%
    transform scale(20)
    letter-spacing 10em
    -ms-transform scale(20)
    opacity 0
    cursor pointer

@media only screen and ( max-width: 500px )
  .file_upload
    & > div
      display none
    & > button
      width 100%